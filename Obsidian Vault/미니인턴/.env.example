# MiniIntern M-Class Application System
# Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
# Development: PostgreSQL (Homebrew PostgreSQL 15 on custom port)
DATABASE_URL="postgresql://macbook@localhost:5433/miniintern_mclass?schema=public"

# Production: PostgreSQL (configure with production credentials)
# DATABASE_URL="postgresql://username:password@production-host:5432/miniintern_mclass?schema=public"

# Alternative databases (if needed)
# MySQL: DATABASE_URL="mysql://username:password@localhost:3306/miniintern_mclass"
# SQLite (legacy): DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET="miniintern-mclass-dev-secret-key-2024-very-long-and-secure"
JWT_ISSUER="miniintern-mclass"
JWT_AUDIENCE="miniintern-users"
JWT_EXPIRES_IN="24h"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/application.log

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:8080"

# Security Configuration
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_REQUEST_TRACKING=true

# Development/Testing Configuration
SILENT_LOGS=false
DEBUG_MODE=false

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=help@miniintern.com
SMTP_PASS=your-app-password

# Admin Account (for seeding)
ADMIN_EMAIL=admin@miniintern.com
ADMIN_PASSWORD=SecureAdmin123!